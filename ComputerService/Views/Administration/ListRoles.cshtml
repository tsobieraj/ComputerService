@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Role List";
}

<h1 class="text-center text-white"><br />Role List</h1>

@if (Model.Any())
{
    <a class="viewButton mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3 text-white bg-dark border-white">
            <div class="card-header" style="font-size:16px">
                Role Id : @role.Id
            </div>
            <div class="card-body" style="font-size:20px">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn viewButton" asp-action="EditRole" asp-controller="Administration"
                       asp-route-id="@role.Id">Edit</a>

                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn deleteButton">Yes</button>
                        <a href="#" class="btn viewButton"
                           onclick="confirmDelete('@role.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="deleteButton"
                           onclick="confirmDelete('@role.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="viewButton" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}