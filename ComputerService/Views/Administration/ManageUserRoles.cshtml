@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card text-white bg-dark border-white">
        <div class="card-header">
            <h2 class="text-center">Manage User Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" style="transform:scale(1.5)" />
                    <label class="form-check-label" style="font-size:20px; position:relative; bottom:6px; left:10px" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn viewButton"
                   style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@userId"
               class="btn viewButton" style="width:auto">Cancel</a>
        </div>
    </div>
</form>