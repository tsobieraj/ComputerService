@model List<ComputerService.Models.Item>

@{
    ViewData["Title"] = "Cart";
}

<h1 align="center">Your cart:</h1>

<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/Images/" + (item.PhotoPath ?? "no_item.jpg");

        <div class="card m-2" style="min-width: 16.8rem; max-width:18.5%;">
            <div class="card-header text-center">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@item.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="removefromcart" asp-controller="home" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>