@model IEnumerable<Item>

@{ 
    ViewBag.Title = "Item list";
}

    <div class="card-deck">
        @foreach (var item in Model)
        {
            var photoPath = "~/Images/" + (item.PhotoPath ?? "no_item.jpg");

            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@item.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary m-1">View</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
                    <a asp-action="addtocart" asp-controller="home" asp-route-id="@item.Id" class="btn btn-primary m-1">Add</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>